{
    "name": "pragma-framework/historic",
    "description": "The Pragma Module for handling models changelogs in Pragma Framework",
    "license": "MIT",
    "keywords": ["pragma", "framework", "historic"],
    "authors": [
        {"name": "Cyril Rouyer"}
    ],
    "require": {
        "php": ">=5.3.0",
        "pragma-framework/core": "dev-master",
        "robmorgan/phinx": "^0.8.0"
    },
     "autoload": {
        "psr-0" : { "Pragma\\Historic" : "." }
    },
    "scripts": {
        "post-install-cmd": [
            "Pragma\\Historic\\Helpers\\Migrate::postInstallCmd"
        ],
        "post-update-cmd": [
            "Pragma\\Historic\\Helpers\\Migrate::postUpdateCmd"
        ],
        "pre-package-uninstall": [
            "Pragma\\Historic\\Helpers\\Migrate::preUninstall"
        ]
    }
}
